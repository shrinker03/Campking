<%- include("../partials/header.ejs") %>




<div class="container">
    <div class="container">
        <% if(currentUser && currentUser.isAdmin) { %>
            <h3>You are Admin!</h3>
        <% } %>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to campground!</h1>
            <p>Let's Make A Camping Great..</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
        </div>
    </header>
        
        <div id="campall" class="row text-center">
            <div class="container">
                <div class=" row text-center">
                    <div class="col-md-12">
                        <% if(noMatch !== null){ %>
                            <h3><%= noMatch %></h3>
                        <% } %>
                    </div>
                    <% campgrounds.forEach(function(campground){ %>
                        <div class=" col-md-6 col-lg-4">
                            <div class="mb-3">
                                <div class = "card my-2 shadow border-0">
                                    <a href="/campgrounds/<%= campground._id %>"><img src = "<%= campground.image %>" class = "card-img-top"></a>
                                    <div class="card-body">
                                        <a href="/campgrounds/<%= campground._id %>">
                                        <h4 class="card-title float-left">
                                            <%= campground.name %>
                                        </a>    
                                        </h4>
                                        <h4 class="card-title float-right text-primary">
                                            $<%= campground.price %>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer.ejs") %>