<%- include("../partials/header.ejs") %>


<div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-lg-6">
        <div class="card shadow border-0">          
          <div class="card-body">
              <div class="text-center">
                  <img src="https://img.icons8.com/cute-clipart/64/000000/comments.png"/>
              </div>
            <h2 class="text-center"><span class="text-muted">Edit Comment </span></h2>
            <p>
              <small class="text-muted">Fields marked * are required.</small>
            </p>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
          </div>
        </div>
      </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>